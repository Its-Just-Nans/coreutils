#compdef uu_chroot

autoload -U is-at-least

_uu_chroot() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-u+[User (ID or name) to switch before running the program]:USER: ' \
'--user=[User (ID or name) to switch before running the program]:USER: ' \
'-g+[Group (ID or name) to switch to]:GROUP: ' \
'--group=[Group (ID or name) to switch to]:GROUP: ' \
'-G+[Comma-separated list of groups to switch to]:GROUP1,GROUP2...: ' \
'--groups=[Comma-separated list of groups to switch to]:GROUP1,GROUP2...: ' \
'--userspec=[Colon-separated user and group to switch to. Same as -u USER -g GROUP. Userspec has higher preference than -u and/or -g]:USER:GROUP: ' \
'--skip-chdir[Use this option to not change the working directory to / after changing the root directory to newroot, i.e., inside the chroot.]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
':newroot:_files -/' \
'::command:_command_names -e' \
&& ret=0
}

(( $+functions[_uu_chroot_commands] )) ||
_uu_chroot_commands() {
    local commands; commands=()
    _describe -t commands 'uu_chroot commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_chroot" ]; then
    _uu_chroot "$@"
else
    compdef _uu_chroot uu_chroot
fi
