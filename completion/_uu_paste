#compdef uu_paste

autoload -U is-at-least

_uu_paste() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-d+[reuse characters from LIST instead of TABs]:LIST: ' \
'--delimiters=[reuse characters from LIST instead of TABs]:LIST: ' \
'-s[paste one file at a time instead of in parallel]' \
'--serial[paste one file at a time instead of in parallel]' \
'-z[line delimiter is NUL, not newline]' \
'--zero-terminated[line delimiter is NUL, not newline]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
'::file:_files' \
&& ret=0
}

(( $+functions[_uu_paste_commands] )) ||
_uu_paste_commands() {
    local commands; commands=()
    _describe -t commands 'uu_paste commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_paste" ]; then
    _uu_paste "$@"
else
    compdef _uu_paste uu_paste
fi
