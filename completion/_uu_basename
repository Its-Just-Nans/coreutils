#compdef uu_basename

autoload -U is-at-least

_uu_basename() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-s+[remove a trailing SUFFIX; implies -a]:SUFFIX: ' \
'--suffix=[remove a trailing SUFFIX; implies -a]:SUFFIX: ' \
'-a[support multiple arguments and treat each as a NAME]' \
'--multiple[support multiple arguments and treat each as a NAME]' \
'-z[end each output line with NUL, not newline]' \
'--zero[end each output line with NUL, not newline]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
'::name:_files' \
&& ret=0
}

(( $+functions[_uu_basename_commands] )) ||
_uu_basename_commands() {
    local commands; commands=()
    _describe -t commands 'uu_basename commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_basename" ]; then
    _uu_basename "$@"
else
    compdef _uu_basename uu_basename
fi
