#compdef uu_sleep

autoload -U is-at-least

_uu_sleep() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
'::NUMBER -- pause for NUMBER seconds:' \
&& ret=0
}

(( $+functions[_uu_sleep_commands] )) ||
_uu_sleep_commands() {
    local commands; commands=()
    _describe -t commands 'uu_sleep commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_sleep" ]; then
    _uu_sleep "$@"
else
    compdef _uu_sleep uu_sleep
fi
