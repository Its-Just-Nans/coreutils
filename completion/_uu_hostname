#compdef uu_hostname

autoload -U is-at-least

_uu_hostname() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-d[Display the name of the DNS domain if possible]' \
'--domain[Display the name of the DNS domain if possible]' \
'-i[Display the network address(es) of the host]' \
'--ip-address[Display the network address(es) of the host]' \
'-f[Display the FQDN (Fully Qualified Domain Name) (default)]' \
'--fqdn[Display the FQDN (Fully Qualified Domain Name) (default)]' \
'-s[Display the short hostname (the portion before the first dot) if possible]' \
'--short[Display the short hostname (the portion before the first dot) if possible]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
'::host:_hosts' \
&& ret=0
}

(( $+functions[_uu_hostname_commands] )) ||
_uu_hostname_commands() {
    local commands; commands=()
    _describe -t commands 'uu_hostname commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_hostname" ]; then
    _uu_hostname "$@"
else
    compdef _uu_hostname uu_hostname
fi
