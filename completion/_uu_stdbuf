#compdef uu_stdbuf

autoload -U is-at-least

_uu_stdbuf() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'-i+[adjust standard input stream buffering]:MODE: ' \
'--input=[adjust standard input stream buffering]:MODE: ' \
'-o+[adjust standard output stream buffering]:MODE: ' \
'--output=[adjust standard output stream buffering]:MODE: ' \
'-e+[adjust standard error stream buffering]:MODE: ' \
'--error=[adjust standard error stream buffering]:MODE: ' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
':command:_command_names -e' \
&& ret=0
}

(( $+functions[_uu_stdbuf_commands] )) ||
_uu_stdbuf_commands() {
    local commands; commands=()
    _describe -t commands 'uu_stdbuf commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_stdbuf" ]; then
    _uu_stdbuf "$@"
else
    compdef _uu_stdbuf uu_stdbuf
fi
