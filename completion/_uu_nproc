#compdef uu_nproc

autoload -U is-at-least

_uu_nproc() {
    typeset -A opt_args
    typeset -a _arguments_options
    local ret=1

    if is-at-least 5.2; then
        _arguments_options=(-s -S -C)
    else
        _arguments_options=(-s -C)
    fi

    local context curcontext="$curcontext" state line
    _arguments "${_arguments_options[@]}" \
'--ignore=[ignore up to N cores]:N: ' \
'--all[print the number of cores available to the system]' \
'-h[Print help]' \
'--help[Print help]' \
'-V[Print version]' \
'--version[Print version]' \
&& ret=0
}

(( $+functions[_uu_nproc_commands] )) ||
_uu_nproc_commands() {
    local commands; commands=()
    _describe -t commands 'uu_nproc commands' commands "$@"
}

if [ "$funcstack[1]" = "_uu_nproc" ]; then
    _uu_nproc "$@"
else
    compdef _uu_nproc uu_nproc
fi
